{
  "name": "nebula-clubs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules dotenv jest --detectOpenHandles --forceExit",
    "drizzle:generate": "dotenv drizzle-kit generate",
    "drizzle:migrate": "dotenv drizzle-kit migrate",
    "drizzle:check": "dotenv drizzle-kit check"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^0.3.2",
    "@date-fns/tz": "^1.4.1",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@google/genai": "^1.27.0",
    "@hookform/resolvers": "^3.3.2",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@mui/material-nextjs": "^7.3.3",
    "@mui/x-date-pickers": "^8.15.0",
    "@neondatabase/serverless": "^0.10.2",
    "@next/third-parties": "^15.5.6",
    "@sentry/nextjs": "^9.22.0",
    "@tanstack/match-sorter-utils": "^8.8.4",
    "@tanstack/react-query": "^5.74.3",
    "@tanstack/react-query-devtools": "^5.91.0",
    "@tanstack/react-table": "^8.11.0",
    "@tanstack/react-virtual": "^3.0.1",
    "@trpc/client": "^11.1.0",
    "@trpc/server": "^11.1.0",
    "@trpc/tanstack-react-query": "^11.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "next": "^15.5.6",
    "next-auth": "^4.24.11",
    "postgres": "^3.3.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.48.2",
    "react-markdown": "^10.1.0",
    "rehype-external-links": "^3.0.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.33.5",
    "superjson": "^1.13.1",
    "zod": "^4.0.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/eslint": "^8.56.12",
    "@types/jest": "^29.5.5",
    "@types/node": "^22.14.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.24.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.27",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "drizzle-zod": {
      "zod": "^4.0.5"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "next/core-web-vitals",
      "prettier",
      "plugin:jsx-a11y/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "simple-import-sort",
      "@typescript-eslint"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error"
    }
  }
}
